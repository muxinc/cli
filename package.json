{
  "name": "@mux/cli",
  "version": "1.0.0",
  "description": "Official Mux CLI for interacting with Mux APIs",
  "type": "module",
  "bin": {
    "mux": "./dist/index.js"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir ./dist --target bun --format esm",
    "build:binary": "bun build src/index.ts --compile --outfile ./dist/mux",
    "dev": "bun run src/index.ts",
    "format": "pnpm exec biome format --write",
    "lint": "pnpm exec biome format",
    "check": "pnpm exec biome check",
    "check:write": "pnpm exec biome check --write",
    "typecheck": "bun --bun tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@cliffy/ansi": "jsr:1.0.0-rc.8",
    "@cliffy/command": "jsr:1.0.0-rc.8",
    "@cliffy/prompt": "npm:@jsr/cliffy__prompt@1.0.0-rc.8",
    "@opentui/core": "^0.1.50",
    "@opentui/react": "^0.1.50",
    "@std/path": "npm:@jsr/std__path@^1.1.3",
    "glob": "^13.0.0",
    "react": "^19.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "@mux/mux-node": "^12.8.1",
    "@types/bun": "latest",
    "@types/react": "^19.2.7",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
